    <style>
        .tb {
            display: flex;
            justify-content: center;
        }

        .table {
            position: absolute;
            top: 9rem;
            text-align: center;
            width: 95%;
        }

        .table td,
        .table th {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: center;
            font-size: 16px;
        }

        .table th {
            background-color: #5d4fff;
            color: #ffffff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .del {
            border: none !important;
        }
        .mob{
            display: none;
        }

        /*responsive*/

        @media(max-width: 900px) {
            .table thead {
                display: none;
            }

            .table,
            .table tbody,
            .table tr,
            .table td {
                display: block;
                width: 99.5%;
                margin: 0px auto;
            }

            .table tr {
                margin: 20px 0px;
            }

            .table td {
                text-align: right;
                text-align: right;
                position: relative;
            }

            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 0;
                width: 50%;
                padding-left: 15px;
                font-size: 15px;
                font-weight: bold;
                text-align: left;
            }

            .big {
                display: none;
            }

            .mob {
                display: flex;
                justify-content: flex-end;
                font-size: 1.4rem;
            }

            .mob a svg {
                color: black;
            }

            .profileMob {
                font-size: 1.4rem;
                justify-content: flex-end;
                width: 100%;
            }

            .logo a img {
                width: 90%;
                margin-left: 0.5rem;
            }

            .mobactive {
                opacity: 0;
            }
        }

        .head {
            padding-top: 7rem;
            text-align: center;
        }

        body {
            background-image: none !important;
