<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dental Admin Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="icon"
        href="https://assets.website-files.com/601d7e7320ecf079f58169fd/6026ec48eccd0a76cfc8f068_favicon-dentist-template.svg"
        type="image/icon type">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/releases/v5.12.1/js/all.js" crrossorigin="anonymous"></script>
    <link rel="stylesheet" href="/assets/main/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.css"
        integrity="sha512-UTNP5BXLIptsaj5WdKFrkFov94lDx+eBvbKyoe1YAfjeRPC+gT5kyZ10kOHCfNZqEui1sxmqvodNUx3KbuYI/A=="
        crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="/assets/admin/admin.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.css" />
    <script src="/assets/common.js"></script>
    <style>
        .tb {
            display: flex;
            justify-content: center;
        }

        .table {
            position: absolute;
            top: 7rem;
            text-align: center;
            width: 95%;
        }

        .table td,
        .table th {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: center;
            font-size: 16px;
        }

        .table th {
            background-color: #5d4fff;
            color: #ffffff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .del {
            border: none !important;
        }

        /*responsive*/

        @media(max-width: 900px) {
            .table thead {
                display: none;
            }

            .table,
            .table tbody,
            .table tr,
            .table td {
                display: block;
                width: 99.5%;
                margin: 0px auto;
            }

            .table tr {
                margin: 20px 0px;
            }

            .table td {
                text-align: right;
                text-align: right;
                position: relative;
            }

            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 0;
                width: 50%;
                padding-left: 15px;
                font-size: 15px;
                font-weight: bold;
                text-align: left;
            }
        }

        body {
            background-image: none !important;
        }
    </style>
</head>

<body onkeydown="cancelBack()">
    <!------------------------------ Page Loader ----------------------------->

    <div id="preloader">
        <div class="loader"></div>
    </div>

    <!------------------------------ Header Section ----------------------------->

    <header>
        <section class="header">
            <div class="container">
                <div class="menu">
                    <div class="logo">
                        <a href="#">
                            <img
                                src="https://assets.website-files.com/601d7e7320ecf079f58169fd/601d95dc011f7070a0f319c7_logo-dentist-template.svg">
                        </a>
                    </div>
                    <div class="nav" id="nav">
                        <ul>
                            <li><a href="/assets/service/service.html">Services</a></li>
                            <li><a href="/assets/about/about.html">About</a></li>
                            <li class="heroBtn"><a href="/"><button>Logout</button></a></li>

                        </ul>
                    </div>

                </div>
                <div class="hamburger" id="hamburger">
                    <div id="nav-icon2">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <div class="tb">
        <table class="table">
            <tbody>
                <% if(data.length){%>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile Number</th>
                            <th>Doctor's Name</th>
                            <th>Serivce</th>
                            <th>Date</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <% } else{ %>
                        <thead>

                        </thead>
                        <%}%>
                            <% if(data.length){ for(var i=0; i< data.length; i++) {%>
                                <tr>
                                    <td data-label="ID">
                                        <%= data[i].id%>
                                    </td>
                                    <td data-label="Name">
                                        <%= data[i].name%>
                                    </td>
                                    <td data-label="Email">
                                        <%= data[i].email%>
                                    </td>
                                    <td data-label="Mobile No">
                                        <%= data[i].mobNumber%>
                                    </td>
                                    <td data-label="Doctor Name">
                                        <%= data[i].doctorName%>
                                    </td>
                                    <td data-label="Service">
                                        <%= data[i].service%>
                                    </td>
                                    <td data-label="Date">
                                        <%= data[i].date%>
                                    </td>
                                    <td data-label="Time">
                                        <%= data[i].time%>
                                    </td>
                                    <td class="del">
                                        <a class="btn btn-danger btn-xs" href="/delete/<%= data[i].id %>"><i
                                                class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                <% } }else{ %>
                                    <thead>

                                    </thead>
                                    <!-- <h1></h1> -->
                                    <tr>
                                        <td class="text-center">No user</td>
                                    </tr>
                                    <% } %>
            </tbody>
        </table>
    </div>


    <!------------------------------ Required Scripts ----------------------------->

    <script>

        let hamburger = document.getElementById("nav-icon2");
        hamburger.addEventListener("click", () => {
            let nav = document.getElementById("nav");
            nav.classList.toggle("navactive");
            hamburger.classList.toggle('open');
        });
    </script>
</body>

</html>